---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

// Images Unsplash pour les sections Nutriwatt

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Des recommandations basées sur vos données",
    subTitle:
      "Nutriwatt analyse vos apports nutritionnels, vos objectifs et votre activité physique pour vous proposer des recommandations personnalisées. Pas de théorie abstraite : uniquement des ajustements concrets, compréhensibles et applicables immédiatement.",
    single: false,
    imgOne: "/services/3.jpg",
    imgOneAlt: "Application Nutriwatt - recommandations nutritionnelles",
    imgTwo: "https://images.unsplash.com/photo-1490645935967-10de6ba17061?w=800&h=600&fit=crop&q=80",
    imgTwoAlt: "Aliments sains et application mobile de nutrition",
    btnExists: true,
    btnTitle: "Voir comment ça fonctionne",
    btnURL: getRelativeLocaleUrl("fr", "products"),
  },
  {
    isRightSection: true,
    title: "Adapter la nutrition à l'effort",
    subTitle:
      "Pour les sportifs, Nutriwatt va plus loin en intégrant vos entraînements et vos dépenses énergétiques. L'application ajuste automatiquement vos besoins en calories et en macronutriments en fonction de l'intensité réelle de vos séances.",
    single: false,
    imgOne: "/services/4.jpg",
    imgOneAlt: "Athlète avec application Nutriwatt",
    imgTwo: "/services/5.jpg",
    imgTwoAlt: "Entraînement sportif avec suivi nutritionnel",
    btnExists: false,
  },
  {
    isRightSection: true,
    title: "Un suivi simple et continu",
    subTitle:
      "Visualisez votre progression jour après jour : énergie, macronutriments, régularité alimentaire et tendances longues. Nutriwatt vous aide à rester cohérent dans le temps, sans surcharge ni complexité.",
    single: false,
    imgOne: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&h=600&fit=crop&q=80",
    imgOneAlt: "Dashboard de données de santé et fitness",
    imgTwo: "https://images.unsplash.com/photo-1559757148-5c350d0d3c56?w=800&h=600&fit=crop&q=80",
    imgTwoAlt: "Application mobile de suivi nutritionnel avec graphiques",
  },
  {
    isRightSection: false,
    title: "Des habitudes durables",
    subTitle:
      "Nutriwatt ne se limite pas à un objectif ponctuel. L'application vous aide à construire des habitudes alimentaires durables, adaptées à votre rythme de vie, pour des résultats qui tiennent dans le temps.",
    img: "https://images.unsplash.com/photo-1512621776951-a57141f2eefd?w=800&h=600&fit=crop&q=80",
    imgAlt: "Personne avec un mode de vie sain et équilibré",
    btnExists: false,
  },
];
---

<MainLayout
  title="Services | Nutriwatt"
  lang="fr"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://raph13009.github.io/nutriwatt/fr/services",
    url: "https://raph13009.github.io/nutriwatt/fr/services",
    name: "Services | Nutriwatt",
    description:
      "Des outils pour mieux comprendre votre corps. Nutriwatt vous accompagne au quotidien pour suivre votre alimentation et adapter votre énergie à votre mode de vie.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://raph13009.github.io/nutriwatt/fr",
      name: "ScrewFast",
      description:
        "ScrewFast propose des outils matériels de premier ordre et des services de construction experts pour répondre à tous vos besoins de projet.",
    },
    inLanguage: "fr",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Des outils pour mieux comprendre votre corps"
    subTitle="Nutriwatt vous accompagne au quotidien pour suivre votre alimentation, comprendre vos besoins nutritionnels et adapter votre énergie à votre mode de vie. Que vous soyez sportif ou simplement attentif à votre santé, l'application transforme vos données en décisions claires."
    btnExists={true}
    btnTitle="Découvrir les usages"
    btnURL={getRelativeLocaleUrl("fr", "products")}
    imgOne="/services/1.jpg"
    imgTwo="/services/2.jpg"
    imgOneAlt="Application Nutriwatt - suivi nutritionnel"
    imgTwoAlt="Application Nutriwatt - analyse des données"
  />
  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="Nutriwatt en pratique"
    subTitle="Une application conçue pour s'adapter à tous les profils et tous les objectifs, du suivi quotidien à l'optimisation sportive."
    mainStatTitle="100%"
    mainStatSubTitle="gratuit, sans abonnement ni carte bancaire"
    stats={[
      {
        stat: "2 usages",
        description: "quotidien et sport, dans une seule application",
      },
      {
        stat: "Synchronisation",
        description: "automatique avec Strava et Garmin",
      },
      {
        stat: "Analyse complète",
        description: "calories, macronutriments et progression",
      },
    ]}
  />
</MainLayout>
