---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
// Utiliser les screenshots de l'app Nutriwatt
const heroImage = "/screens/screen1.png"; // Le plus important - Hero
const featureImage = "/screens/screen2.png"; // Features principales
const tools = "/screens/screen3.png"; // Interface outils
const dashboard = "/screens/screen4.png"; // Dashboard nutrition
const construction = "/screens/screen5.png"; // Le moins important
import faqs from "@data/fr/faqs.json";
import features from "@data/fr/features.json";
import { getRelativeLocaleUrl } from "astro:i18n";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout lang="fr">
  <AnnouncementBanner
    btnId="dismiss-button"
    title="Commencez votre parcours santé dès aujourd'hui"
    btnTitle="Télécharger Gratuitement"
    url={getRelativeLocaleUrl("fr", "products")}
  />

  <HeroSection
    title="Manger. Comprendre. Progresser."
    useTrueFocus={true}
    subTitle="Nutriwatt vous aide à suivre vos calories et vos macronutriments au quotidien, avec des ajustements automatiques selon votre activité physique."
    primaryBtn="Télécharger Gratuitement"
    primaryBtnURL={getRelativeLocaleUrl("fr", "products")}
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`À partir de plus de <span class="font-bold">12,8k</span> avis`
    src={heroImage}
    alt="Application mobile Nutriwatt montrant l'interface de suivi nutritionnel"
  />

  <ClientsSection
    title={`Conçu pour le <span class="bg-gradient-to-r from-[#3A73C1] via-[#6FAFD6] to-[#7ECBC2] bg-clip-text text-transparent font-bold">quotidien</span> et le <span class="bg-gradient-to-r from-[#3A73C1] via-[#6FAFD6] to-[#7ECBC2] bg-clip-text text-transparent font-bold">sport</span>`}
    subTitle="Du suivi nutritionnel simple à l'optimisation sportive avancée, Nutriwatt s'adapte à votre niveau et à vos objectifs."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Une nutrition claire et pilotée"
    subTitle="Que vous souhaitiez mieux manger au quotidien ou optimiser votre nutrition sportive, Nutriwatt centralise calories, macros et activité physique dans une interface simple et lisible."
    src={featureImage}
    alt="Fonctionnalités et avantages de l'application Nutriwatt"
    features={features}
  />

  <FeaturesNavs
    title="Les fonctionnalités essentielles pour suivre votre nutrition et optimiser vos performances."
    tabs={[
      {
        heading: "Saisie des repas",
        content:
          "Enregistrez facilement vos repas et visualisez instantanément leur impact sur vos calories et macronutriments.",
        svg: "tools",
        src: tools,
        alt: "Interface d'enregistrement des repas sur application mobile",
        first: true,
      },
      {
        heading: "Calories & macronutriments",
        content:
          "Calories, protéines, glucides, lipides et fibres calculés automatiquement, sans effort.",
        svg: "dashboard",
        src: dashboard,
        alt: "Tableau de bord nutritionnel montrant les nutriments calculés",
        second: true,
      },
      {
        heading: "Connexion Strava & Garmin",
        content:
          "Les calories brûlées lors de vos activités sont automatiquement prises en compte pour ajuster vos objectifs.",
        svg: "house",
        src: construction,
        alt: "Intégration Strava montrant la synchronisation de l'activité et de la nutrition",
      },
    ]}
  />

  <TestimonialsSection
    title="Des résultats concrets"
    subTitle="Nutriwatt aide ses utilisateurs à mieux comprendre leur nutrition et à progresser durablement."
    ;
    testimonials={[
      {
        content:
          "Nutriwatt Sport a complètement changé ma façon d'aborder la nutrition. L'intégration Strava est transparente et les calculs automatiques de nutriments me font gagner tellement de temps. J'ai enfin trouvé une application qui comprend à la fois mes besoins d'entraînement et de nutrition !",
        author: "Mia Thompson",
        role: "Triathlète | Coach santé",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "50k+",
        description:
          "utilisateurs actifs suivant leur nutrition et atteignant leurs objectifs",
      },
      {
        count: "85%",
        description:
          "des utilisateurs rapportent une meilleure compréhension de leur apport nutritionnel",
      },
      {
        count: "3,2M",
        description:
          "repas enregistrés et analysés pour aider les utilisateurs à faire de meilleurs choix",
      },
      {
        count: "2x",
        description:
          "atteinte d'objectifs plus rapide avec des recommandations personnalisées",
      },
    ]}
  />

  <FAQ title="Questions<br />courantes" faqs={faqs} />

  <HeroSectionAlt
    title="Prenez le contrôle de votre nutrition"
    subTitle="Suivez votre nutrition au quotidien ou optimisez-la avec vos entraînements. Nutriwatt s'adapte à votre mode de vie."
    url={getRelativeLocaleUrl("fr", "products")}
  />
</MainLayout>
